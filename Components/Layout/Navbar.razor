@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

<nav class="navbar navbar-expand-lg navbar-dark bg-slate-800">
    <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard">CashFlow</a>

        <div id="dashboardNavbar">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/cashin">
                        <i class="bi bi-box-arrow-in-down"></i> CashIn
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/debts">
